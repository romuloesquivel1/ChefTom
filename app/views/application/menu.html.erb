<script>
var wait = (ms) => new Promise((r) => setTimeout(r, ms));

var retryOperation = (operation, delay, retries) =>
  new Promise((resolve, reject) => {
    if (window[operation]) {
      return resolve();
    }

    return wait(delay)
      .then(retryOperation.bind(null, operation, delay, retries - 1))
      .then(resolve)
      .catch(reject);
});

retryOperation('documentReady', 100, 10)
  .then(() => {
    documentReady(() => {
      (new Menu(document.getElementById('menu-list'))).init();
    });
  })
  .catch((ex) => {
    console.log('document ready failed', ex);
  });
</script>
