<div class="profile-page-content">
  <h1><%= @user.name %>'s Profile</h1>
  <div class="profile-page-container">
    <p>Name: <%= @user.name %></p>
    <p>Email: <%= @user.email %></p>
    <div class="profile-page-meals">
      <div class="likes">
        <% @user.likes.each do |liked_meal| %>
          <div class="liked-meal"><%= liked_meal.name %></div>
        <% end %>
      </div>
      <div class="dislikes">
        <% @user.dislikes.each do |disliked_meal| %>
          <div class="disliked-meal"><%= disliked_meal.name %></div>
        <% end %>
      </div>
    </div>
  </div>
  <li class="sign-out-button">
    <%= button_to(
      "Sign Out",
      destroy_user_session_path,
      method: :delete
    ) %>
    <br>
  </li>
</div>