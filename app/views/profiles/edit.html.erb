<h1>Edit Profile</h1>
<div class="edit-profile-form">
<%= form_with(model: @user, url: profile_path(@user), method: :patch) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
<br>
<br>
  <%= form.label :email %>
  <%= form.email_field :email %>
<br>
<br>
<%= form.submit "Update Profile", class: "edit-button" %>
<% end %>
</div>